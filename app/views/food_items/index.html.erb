<div class="page-header">
  <h1>
    Food items
    <a href="/food_items/new" class="btn btn-lg btn-success">New Food item</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>

      <% @food_items.each do |food_item| %>
      <tr>
        <td><%= food_item.name %></td>
        <td><img src='<%= food_item.image %>' class='img-responsive'></td>
        <td><%= food_item.price %></td>
        <td>
          <a href="/food_items/<%= food_item.id %>" class="btn btn-primary">Show</a>
          <a href="/food_items/<%= food_item.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_food_item/<%= food_item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @food_items, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
