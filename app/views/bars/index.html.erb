<div class="page-header">
  <h1>
    Bars
    <a href="/bars/new" class="btn btn-lg btn-success">New Bar</a>
  </h1>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Style</th>
        <th>Cuisine</th>
        <th>Happy hour start time</th>
        <th>Happy hour end time</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Actions</th>
      </tr>

      <% @bars.each do |bar| %>
      <tr>
        <td><%= bar.name %></td>
        <td><%= bar.address %></td>
        <td><%= bar.style %></td>
        <td><%= bar.cuisine %></td>
        <td><%= bar.happy_hour_start_time %></td>
        <td><%= bar.happy_hour_end_time %></td>
        <td><%= bar.latitude %></td>
        <td><%= bar.longitude %></td>
        <td>
          <a href="/bars/<%= bar.id %>" class="btn btn-primary">Show</a>
          <a href="/bars/<%= bar.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bar/<%= bar.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>