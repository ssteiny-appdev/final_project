<div class="page-header">
  <h3>Drink Order #<%= @drink_order.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Drink</dt>
      <dd>
        <% if @drink_order.drink.present? %>
          <a href="/drinks/<%= @drink_order.drink_id %>">
            <%= @drink_order.drink.name %>
          </a>
        <% end %>
      </dd>

      <dt>Bar</dt>
      <dd>
        <% if @drink_order.bar.present? %>
          <a href="/bars/<%= @drink_order.bar_id %>">
            <%= @drink_order.bar.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/drink_orders" class="btn btn-primary">
        Back
      </a>
      <a href="/drink_orders/<%= @drink_order.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_drink_order/<%= @drink_order.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
