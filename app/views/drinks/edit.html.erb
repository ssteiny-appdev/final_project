<!-- Validation failure messages -->
<% if @drink.errors.any? %>
  <% @drink.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Drink #<%= @drink.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_drink/<%= @drink.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @drink.name %>">
      </div>

      <!-- Label and input for price -->
      <div class="form-group">
        <label for="price" class="control-label">
          Price
        </label>

        <input type="text" id="price" name="price" placeholder="Price" class="form-control" value="<%= @drink.price %>">
      </div>

      <button class="btn btn-warning">
        Update Drink
      </button>
      or
      <a href="/drinks/<%= @drink.id %>">Cancel</a>
    </form>
  </div>
</div>
